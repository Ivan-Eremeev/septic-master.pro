              .col-xl-3.col-md-6 
                .benefit2__item 
                  .benefit2__icon 
                    img(src="img/benefit2-icons/img3.svg", alt="")
                  .benefit2__text Удобная и быстрая доставка
              .col-xl-3.col-md-6 
                .benefit2__item 
                  .benefit2__icon 
                    img(src="img/benefit2-icons/img4.svg", alt="")
                  .benefit2__text Весь товар сертифицирован
      // /benefit2

    include core/footer.pug
