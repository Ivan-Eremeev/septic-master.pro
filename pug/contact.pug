                          tr 
                            td 
                              .contact__name БИК
                            td 044525225
                      .col-xl-6 
                        table.contact__requisites-table 
                          tr 
                            td 
                              .contact__name Кор. счет
                            td 301018104000000000225
                          tr 
                            td 
                              .contact__name ОГРН
                            td 317213000052597
                          tr 
                            td 
                              .contact__name ИНН
                            td 212500430335

                  .contact__files 
                    a(href="#") 
                      svg(class="icon-pdf")
                        use(xlink:href="img/sprite.svg#pdf")
                      | Скачать одним PDF
            // /contact

            // map
            .map
              .container 
                .title Работаем в Москве и Московской области
                .map__title Зона обслуживания
                .map__text На карте мы указали границы обслуживания и количество свободных мастеров, готовых к выезду
                .map__map 
                  #map 
            // /map

            // callback2
            .callback2
              .container 
                .callback2__container 
                  .title Задайте вопрос
                  form(action="#").callback2__form
                    .row 
                      .col-xl-5
                        .row 
                          .col-12
                            .input 
                              input(type="text" placeholder="Имя")
                          .col-12
                            .input.js-input-tel 
                              input(type="text" placeholder="Телефон")
                          .col-12
                            .input 
                              input(type="text" placeholder="E-mail")
                      .col-xl-7
                        .row 
                          .col-12 
                            .textarea 
                              textarea(placeholder="Комментарий")
                          .col-12.d-flex.align-items-center.flex-wrap.flex-md-nowrap
                            button(type="submit").btn.btn--big.btn--blue 
